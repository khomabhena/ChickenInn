<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNumber"
        android:text="1)"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCity"
        android:text="Bulawayo"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvNumber"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvStreet"
        android:text="Street address"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCity"
        app:layout_constraintLeft_toLeftOf="@id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMerchant"
        android:text="Bulawayo"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStreet"
        app:layout_constraintLeft_toRightOf="@id/tvNumber"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view"
        android:background="@color/lineDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMerchant"
        app:layout_constraintLeft_toLeftOf="@id/tvCity"
        app:layout_constraintRight_toRightOf="@id/tvCity"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewRow"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>