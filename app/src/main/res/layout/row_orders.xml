<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNumber"
        android:text="1)"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvName"
        android:text="Two Piecer"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvNumber"
        app:layout_constraintRight_toLeftOf="@id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPrice"
        android:text="2.50"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivRemove"
        android:visibility="gone"
        android:src="@drawable/ic_remove"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintLeft_toLeftOf="@id/tvPrice"
        app:layout_constraintRight_toRightOf="@id/tvPrice"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <View
        android:background="@color/lineDivider"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        app:layout_constraintRight_toRightOf="@id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="1px" />

</android.support.constraint.ConstraintLayout>